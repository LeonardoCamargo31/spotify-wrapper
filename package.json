{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "Um wrapper para trabalhar com a Spotify Web API",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --watch --require babel-register",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ],
    "check-coverage": true,
    "funcions": 80,
    "lines": 80
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeonardoCamargo31/spotify-wrapper.git"
  },
  "author": "Leonardo Camargo <leonardo_camargo31@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LeonardoCamargo31/spotify-wrapper/issues"
  },
  "homepage": "https://github.com/LeonardoCamargo31/spotify-wrapper#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "node-fetch": "^2.6.0",
    "nyc": "^14.1.1",
    "sinon-chai": "^3.2.0"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "mocha": "^6.2.2",
    "sinon": "^7.5.0"
  }
}
